<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.danielstiner.vibrates"
    android:versionCode="42"
    android:versionName="0.8.0-SNAPSHOT" >
    
    <uses-permission android:name="android.permission.READ_CONTACTS"></uses-permission>
	<!-- Know about incoming calls and the number they are coming from -->
	<uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
	<uses-permission android:name="android.permission.RECEIVE_SMS"></uses-permission>
	<uses-permission android:name="android.permission.VIBRATE"></uses-permission>
	<uses-permission android:name="android.permission.RECEIVE_MMS"></uses-permission>
	<!-- Know when the phone leaves vibrate mode, so we can switch it back to vibrate only -->
	<uses-permission android:name="android.media.RINGER_MODE_CHANGED"></uses-permission>

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name">
        <activity android:name=".view.EntitiesActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.EntityAddActivity" >
        </activity>

        <provider
            android:name=".model.internal.EntityProvider"
            android:authorities="com.danielstiner.vibrates.providers.Entity" >
        </provider>
        <provider
            android:name=".model.internal.IdentifierProvider"
            android:authorities="com.danielstiner.vibrates.providers.Identifier" >
        </provider>
    </application>

</manifest>